<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <!-- Other fragment destinations -->
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.testforcalendarcounter.main.fragment.SmokeFragment"
        android:label="Main"
        tools:layout="@layout/fragment_smoke" />

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.testforcalendarcounter.statistics.fragment.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.testforcalendarcounter.settings.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/colorsFragment"
        android:name="com.example.testforcalendarcounter.settings.settings_colors.ColorsFragment"
        android:label="Colors"
        tools:layout="@layout/fragment_colors" />


    <fragment
        android:id="@+id/healthFragment"
        android:name="com.example.testforcalendarcounter.health.HealthFragment"
        android:label="Health"
        tools:layout="@layout/fragment_health" />

    <!-- Games Section -->
    <fragment
        android:id="@+id/gamesFragment"
        android:name="com.example.testforcalendarcounter.games.fragment.GamesFragment"
        android:label="Games"
        tools:layout="@layout/fragment_games" />

    <!-- Game Destinations -->
    <fragment
        android:id="@+id/memoryGameFragment"
        android:name="com.example.testforcalendarcounter.memorygame.MemoryGameFragment"
        android:label="Memory Game"
        tools:layout="@layout/fragment_memory_game" />
    <fragment
        android:id="@+id/tapGameFragment"
        android:name="com.example.testforcalendarcounter.tapGame.fragment.TapGameFragment"
        android:label="Tap Game"
        tools:layout="@layout/fragment_tap_game" />
    <fragment
        android:id="@+id/breathingTimerFragment"
        android:name="com.example.testforcalendarcounter.breath.fragment.BreathingTimerFragment"
        android:label="Breath Game"
        tools:layout="@layout/fragment_breathing_timer" />

    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.testforcalendarcounter.quiz.fragment.QuizFragment"
        android:label="Quiz Game"
        tools:layout="@layout/fragment_quiz" />

    <!-- Global actions -->
    <action
        android:id="@+id/action_global_memoryGameFragment"
        app:destination="@id/memoryGameFragment" />

    <action
        android:id="@+id/action_global_tapGameFragment"
        app:destination="@id/tapGameFragment" />
</navigation>
